@model Restaurante.Model.DetalleIngrediente

@{
    ViewData["Title"] = "Details";
}


<div>
    <h4>Detalle del Ingrediente</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
</div>
<br />
    <hr />
<h4>Platillos Asociados</h4>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                Platillo
            </th>
            <th>
                Medida
            </th>
            <th>
                Cantidad
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.losPlatillos) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombrePlatillo)
            </td>
                        <td>
                @Html.DisplayFor(modelItem => item.NombreMedida)
            </td>
                        <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    @Html.ActionLink("Editar", "Edit", new {  id = Model.Id }) | <a asp-action="Index">Volver</a>
</div>
