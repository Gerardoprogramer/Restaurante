@model Restaurante.Model.ServirOrden

@{
    ViewData["Title"] = "ServirMesa";
}

<h4>Servir Orden</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ServirMesa">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id" class="control-label"></label>
                 @Html.DropDownList("idMenu", new SelectList(ViewBag.ListaDeMenus, "Id", "Nombre"), new{@class = "form-control input-lg"})
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Servir" class="btn btn-primary" />     <a asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
