@page
@using Microsoft.AspNetCore.Http.Features
@model TwoFactorAuthenticationModel
@{
    ViewData["Title"] = "Autenticación de dos factores (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<div class="container my-5">
    <h3 class="text-center mb-4">@ViewData["Title"]</h3>
    <partial name="_StatusMessage" for="StatusMessage" />

    @{
        var consentFeature = HttpContext.Features.Get<ITrackingConsentFeature>();
        if (consentFeature?.CanTrack ?? true)
        {
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    @if (Model.Is2faEnabled)
                    {
                        @* Alertas sobre códigos de recuperación *@
                        @if (Model.RecoveryCodesLeft == 0)
                        {
                            <div class="alert alert-danger">
                                <strong>No te quedan códigos de recuperación.</strong>
                                <p>Debes <a asp-page="./GenerateRecoveryCodes">generar un nuevo conjunto</a> antes de poder iniciar sesión con un código de recuperación.</p>
                            </div>
                        }
                        else if (Model.RecoveryCodesLeft == 1)
                        {
                            <div class="alert alert-danger">
                                <strong>Te queda 1 código de recuperación.</strong>
                                <p>Puedes <a asp-page="./GenerateRecoveryCodes">generar un nuevo conjunto</a>.</p>
                            </div>
                        }
                        else if (Model.RecoveryCodesLeft <= 3)
                        {
                            <div class="alert alert-warning">
                                <strong>Te quedan @Model.RecoveryCodesLeft códigos de recuperación.</strong>
                                <p>Se recomienda <a asp-page="./GenerateRecoveryCodes">generar un nuevo conjunto</a>.</p>
                            </div>
                        }

                        <div class="mb-3">
                            @if (Model.IsMachineRemembered)
                            {
                                <form method="post" style="display: inline-block">
                                    <button type="submit" class="btn btn-outline-primary me-2 mb-2">Olvidar este navegador</button>
                                </form>
                            }
                            <a asp-page="./Disable2fa" class="btn btn-primary me-2 mb-2">Deshabilitar 2FA</a>
                            <a asp-page="./GenerateRecoveryCodes" class="btn btn-secondary mb-2">Restablecer códigos de recuperación</a>
                        </div>
                    }

                    <h5 class="mt-4">Aplicación autenticadora</h5>
                    <div class="mb-3">
                        @if (!Model.HasAuthenticator)
                        {
                            <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-primary me-2 mb-2">Agregar aplicación autenticadora</a>
                        }
                        else
                        {
                            <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-primary me-2 mb-2">Configurar aplicación autenticadora</a>
                            <a id="reset-authenticator" asp-page="./ResetAuthenticator" class="btn btn-secondary mb-2">Restablecer aplicación autenticadora</a>
                        }
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-danger text-center">
                <strong>No has aceptado la política de privacidad y cookies.</strong>
                <p>Debes aceptar la política antes de poder habilitar la autenticación de dos factores.</p>
            </div>
        }
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
