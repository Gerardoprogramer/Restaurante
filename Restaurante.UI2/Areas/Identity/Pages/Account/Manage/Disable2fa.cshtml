@page
@model Disable2faModel
@{
    ViewData["Title"] = "Deshabilitar autenticación de dos factores (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<div class="container my-5">
    <h3 class="text-center mb-4">@ViewData["Title"]</h3>
    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="alert alert-warning">
                <p><strong>Esta acción solo deshabilita 2FA.</strong></p>
                <p>
                    Deshabilitar 2FA no cambia las claves usadas en la aplicación autenticadora.
                    Si deseas cambiar la clave utilizada en la aplicación, debes
                    <a asp-page="./ResetAuthenticator">restablecer tu aplicación autenticadora</a>.
                </p>
            </div>

            <div class="text-center mt-3">
                <form method="post">
                    <button type="submit" class="btn btn-danger btn-lg px-4">Deshabilitar 2FA</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
