@page
@model EmailModel
@{
    ViewData["Title"] = "Gestionar correo";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="container my-5">
    <h3 class="text-center mb-4">@ViewData["Title"]</h3>

    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm rounded">
                <div class="card-body">
                    <form id="email-form" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        @if (Model.IsEmailConfirmed)
                        {
                            <div class="form-floating input-group mb-3">
                                <input asp-for="Email" class="form-control" disabled />
                                <span class="input-group-text text-success fw-bold">✓</span>
                                <label asp-for="Email" class="form-label">Correo actual</label>
                            </div>
                        }
                        else
                        {
                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control" disabled />
                                <label asp-for="Email" class="form-label">Correo actual</label>
                                <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link p-0 mt-1">
                                    Enviar correo de verificación
                                </button>
                            </div>
                        }

                        <div class="form-floating mb-3">
                            <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true" />
                            <label asp-for="Input.NewEmail" class="form-label">Nuevo correo</label>
                            <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                        </div>

                        <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-primary w-100 btn-lg shadow-sm">
                            Cambiar correo
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
