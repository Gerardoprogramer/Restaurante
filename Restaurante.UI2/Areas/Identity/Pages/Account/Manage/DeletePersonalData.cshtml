@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Eliminar datos personales";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="container my-5">
    <h3 class="text-center mb-4">@ViewData["Title"]</h3>

    <div class="card shadow-sm p-4">
        <div class="alert alert-danger d-flex align-items-start" role="alert">
            <i class="bi bi-exclamation-octagon-fill me-2 fs-3"></i>
            <div>
                <p class="mb-2">
                    <strong>Eliminar esta información borrará permanentemente tu cuenta y no podrá ser recuperada.</strong>
                </p>
                <p class="mb-0">
                    Esta acción es irreversible. Asegúrate de haber guardado cualquier información importante antes de continuar.
                </p>
            </div>
        </div>

        <form id="delete-user" method="post" class="mt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            @if (Model.RequirePassword)
            {
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            }

            <button class="w-100 btn btn-lg btn-danger">
                <i class="bi bi-trash-fill me-1"></i> Eliminar datos y cerrar mi cuenta
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
