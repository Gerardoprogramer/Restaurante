@model IEnumerable<Restaurante.Model.Menu>

@{
    ViewData["Title"] = "Index";
}

<h1><center>Menu</center></h1>
<hr />
<p>
    <a asp-action="Create">Agregar Platillo</a> | <a asp-action="MenuCompleto">Menu Completo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                    @{
                        var base64 = Convert.ToBase64String(item.Imagen);
                        var imagensrc = string.Format("data:image/jpg;base64,{0}", base64);
                    }
                    
                    <img src="@imagensrc" style="width:50px;" class="d-block w-50" />


                </td>

            <td>
                @Html.ActionLink("Editar", "Edit", new {id = item.Id }) |
                @Html.ActionLink("Detalle", "Details", new { id = item.Id})
            </td>
        </tr>
}
    </tbody>
</table>

