@model IEnumerable<Restaurante.Model.Menu>

@{
    ViewData["Title"] = "Menú Completo";
}

<h1 class="text-center mb-4">Menú Completo</h1>

@* Agrupamos los platillos por categoría *@
@foreach (var categoria in Enum.GetValues(typeof(Restaurante.Model.MenuDeCategorias)).Cast<Restaurante.Model.MenuDeCategorias>())
{
    var items = Model.Where(m => m.Categoria == categoria).ToList();
    if (items.Any())
    {
        <h2 class="mt-4">@categoria</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in items)
            {
                var base64 = Convert.ToBase64String(item.Imagen);
                var imagensrc = $"data:image/jpg;base64,{base64}";
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="@imagensrc" class="card-img-top" alt="@item.Nombre" style="height:200px; object-fit:cover;">
                        <div class="card-body">
                            <h5 class="card-title">@item.Nombre</h5>
                            <p class="card-text">Precio: $@item.Precio</p>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Detalles</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
}
