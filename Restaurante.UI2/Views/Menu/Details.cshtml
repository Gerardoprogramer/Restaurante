@model Restaurante.Model.Menu

@{
    ViewData["Title"] = "Detalle del Platillo";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">@Model.Nombre</h4>
            </div>
            <div class="card-body">
                <dl class="row mb-3">
                    <dt class="col-sm-4">Nombre</dt>
                    <dd class="col-sm-8">@Model.Nombre</dd>

                    <dt class="col-sm-4">Categoría</dt>
                    <dd class="col-sm-8">@Model.Categoria</dd>

                    <dt class="col-sm-4">Precio</dt>
                    <dd class="col-sm-8">@Model.Precio</dd>

                    <dt class="col-sm-4">Imagen</dt>
                    <dd class="col-sm-8">
                        @{
                            var base64 = Convert.ToBase64String(Model.Imagen);
                            var imagensrc = string.Format("data:image/jpg;base64,{0}", base64);
                        }
                        <img src="@imagensrc" class="img-fluid rounded" alt="@Model.Nombre" />
                    </dd>
                </dl>

                <div class="d-flex justify-content-between">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>
