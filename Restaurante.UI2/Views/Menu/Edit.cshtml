@model Restaurante.Model.Platillo

@{
    ViewData["Title"] = "Editar Platillo";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Edite el Platillo</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Nombre" class="form-control" />
                        <label asp-for="Nombre">Nombre</label>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <select asp-for="Categoria" class="form-select" asp-items="Html.GetEnumSelectList<Restaurante.Model.MenuDeCategorias>()"></select>
                        <label asp-for="Categoria">Categoría</label>
                        <span asp-validation-for="Categoria" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Precio" class="form-control" />
                        <label asp-for="Precio">Precio</label>
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Imagen" class="form-label">Imagen</label>
                        <input asp-for="Imagen" class="form-control" type="file" />
                        <span asp-validation-for="Imagen" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-success">Modificar</button>
                        <a asp-action="Index" class="btn btn-secondary">Volver</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
