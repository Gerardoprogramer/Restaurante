@model IEnumerable<Restaurante.Model.Medidas>

@{
    ViewData["Title"] = "Lista de Medidas";
}

<h1 class="text-center mb-4">Lista de Medidas</h1>
<hr />

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Agregar Medida</a>
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Detalle</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-secondary" role="alert">
        No hay medidas disponibles.
    </div>
}
