@model IEnumerable<Restaurante.Model.Medidas>

@{
    ViewData["Title"] = "Lista de Medidas";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">📏 Lista de Medidas</h1>
    <hr />

    <div class="d-flex justify-content-between align-items-center mb-3">
        <p class="text-muted mb-0">Gestión de medidas registradas en el sistema.</p>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Agregar Medida
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre</th>
                        <th class="text-end" style="width: 180px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">
                                    <i class="bi bi-eye"></i> Detalle
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-secondary text-center shadow-sm" role="alert">
            No hay medidas disponibles.
        </div>
    }
</div>
