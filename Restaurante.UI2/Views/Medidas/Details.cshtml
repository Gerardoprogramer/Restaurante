@model Restaurante.Model.Medidas

@{
    ViewData["Title"] = "Detalle de Medida";
}

<h4 class="mb-3">Detalle de la Medida</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Nombre)</dd>
</dl>

<div class="d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
