@model IEnumerable<Restaurante.Model.CatalogoDeOrdenes>

@{
    ViewData["Title"] = "Ordenar Mesa";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">🍽️ Ordenar Mesa</h1>
    <hr />
    <h4 class="mb-3">Mesas</h4>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Mesa</th>
                        <th class="text-center" style="width: 200px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@Html.DisplayFor(modelItem => item.Nombre)</strong>
                                <br />
                                @if (item.Estado == Restaurante.Model.EstadoMesas.Disponible)
                                {
                                    <span class="badge bg-success">Disponible</span>
                                }
                                else if (item.Estado == Restaurante.Model.EstadoMesas.Ocupada)
                                {
                                    <span class="badge bg-danger">Ocupada</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@item.Estado</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="OrdenarMesa" asp-route-id="@item.id" class="btn btn-sm btn-primary me-2">
                                    <i class="bi bi-bag"></i> Ordenar
                                </a>
                                <a asp-action="ServirMesa" asp-route-id="@item.id" class="btn btn-sm btn-success">
                                    <i class="bi bi-check-circle"></i> Servir
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-secondary text-center shadow-sm mt-4" role="alert">
            No hay mesas disponibles.
        </div>
    }
</div>

