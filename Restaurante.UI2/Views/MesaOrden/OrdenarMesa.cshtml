@model Restaurante.Model.OrdenarMesa

@{
    ViewData["Title"] = "OrdenarMesa";
}


<h4>Ordenar Mesa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="OrdenarMesa">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="idMenu" class="control-label"></label>
                 @Html.DropDownList("idMenu", new SelectList(ViewBag.ListaDeMenus, "Id", "Nombre"), new{@class = "form-control input-lg"})
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Ordenar" class="btn btn-primary" />      <a asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
