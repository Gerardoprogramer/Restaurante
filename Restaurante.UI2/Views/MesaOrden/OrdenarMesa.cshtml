@model Restaurante.Model.OrdenarMesa

@{
    ViewData["Title"] = "Ordenar Mesa";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0"><i class="bi bi-basket3"></i> Ordenar Mesa</h4>
                </div>
                <div class="card-body">
                    <form asp-action="OrdenarMesa" id="ordenarForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Menú -->
                        <div class="mb-3">
                            <label asp-for="idMenu" class="form-label fw-bold"></label>
                            @Html.DropDownList("idMenu", new SelectList(ViewBag.ListaDeMenus, "Id", "Nombre"), 
                                new { @class = "form-select form-select-lg" })
                        </div>

                        <!-- Cantidad -->
                        <div class="mb-3">
                            <label asp-for="Cantidad" class="form-label fw-bold"></label>
                            <input asp-for="Cantidad" class="form-control form-control-lg" placeholder="Ingrese la cantidad" />
                            <span asp-validation-for="Cantidad" class="text-danger"></span>
                        </div>

                        <!-- Botones -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Ordenar
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-arrow-left-circle"></i> Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
