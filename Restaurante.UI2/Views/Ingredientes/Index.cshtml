@model IEnumerable<Restaurante.Model.Ingredientes>

@{
    ViewData["Title"] = "Ingredientes";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">🍽️ Lista de Ingredientes</h1>
    <hr />

    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Agregar Ingrediente
        </a>
    </div>

    <table class="table table-hover table-bordered align-middle shadow-sm">
        <thead class="table-dark text-center">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th style="width: 150px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1 ">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">
                                <i class="bi bi-eye"></i> Detalle
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2" class="text-center text-muted">
                        No hay ingredientes disponibles.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
