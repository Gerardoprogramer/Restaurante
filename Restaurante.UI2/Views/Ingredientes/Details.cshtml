@model Restaurante.Model.DetalleIngrediente

@{
    ViewData["Title"] = "Detalle del Ingrediente";
}

<div class="container mt-4">
    <!-- Detalle del Ingrediente -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white text-center">
                    <h4 class="mb-0"><i class="bi bi-info-circle"></i> Detalle del Ingrediente</h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-bold">Nombre:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Platillos Asociados -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-list-ul"></i> Platillos Asociados</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.losPlatillos != null && Model.losPlatillos.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0 align-middle">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Platillo</th>
                                        <th>Medida</th>
                                        <th>Cantidad</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.losPlatillos)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.NombrePlatillo)</td>
                                            <td>@Html.DisplayFor(modelItem => item.NombreMedida)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Cantidad)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-secondary text-center m-3">
                            No hay platillos asociados a este ingrediente.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Acciones -->
    <div class="row justify-content-center mt-3">
        <div class="col-md-6 col-lg-5 text-center">
            <div class="d-grid gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-lg">
                    <i class="bi bi-pencil-square"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-arrow-left-circle"></i> Volver
                </a>
            </div>
        </div>
    </div>
</div>
