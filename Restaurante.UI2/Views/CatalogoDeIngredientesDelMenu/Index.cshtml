@model IEnumerable<Restaurante.Model.CatalogoDeIngredienteDelMenu>

@{
    ViewData["Title"] = "Catálogo de Ingredientes del Menú";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">📋 Catálogo de Ingredientes del Menú</h1>
    <hr />

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-dark text-center">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Id_MenuIngrediente)</th>
                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.Precio)</th>
                        <th>@Html.DisplayNameFor(model => model.GananciasAproximadas)</th>
                        <th style="width: 180px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.Id_MenuIngrediente)</td>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td class="text-end">₡@Html.DisplayFor(modelItem => item.Precio)</td>
                            <td class="text-end">₡@Html.DisplayFor(modelItem => item.GananciasAproximadas)</td>
                            <td class="text-center">
                                <a asp-controller="CatalogoListaDeIngredientes" asp-action="Index" asp-route-id="@item.Id_MenuIngrediente" 
                                   class="btn btn-sm btn-info text-white">
                                    <i class="bi bi-basket"></i> Ingredientes
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-secondary text-center shadow-sm mt-4" role="alert">
            No hay ingredientes disponibles en el catálogo.
        </div>
    }
</div>
